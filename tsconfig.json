{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@domain/*": ["src/domain/*"],
        "@application/*": ["src/application/*"],
        "@ui/*": ["src/ui/*"],
        "@infrastructure/*": ["src/infrastructure/*"]
      }
    },
    "include": ["src/**/*", "scripts/**/*"],
    "exclude": ["node_modules", "dist", "data"]
  }
  